pipeline {
    agent { label "jenkins-worker" }
    options {
        timestamps()
        timeout(30)
    }
    stages {
        stage("git-checkout") {
            steps {
                dir('edx-platform') {
                    git url: 'https://github.com/edx/edx-platform.git'
                }
            }
        }
        stage("edx-platform") {
            environment {
                IDA = "edx-platform"
            }
            steps {
                withPythonEnv('System-CPython-2.7') {
                    dir('edx-platform') {
                        sh '''
                        ls ../edx-toggles
                        source scripts/jenkins-common.sh
                        pip install -r requirements/edx/paver.txt; pip install -r requirements/edx/testing.txt;
                        paver install_prereqs;
                        code_annotations static_find_annotations --config_file=../edx-toggles/feature_annotations.yml --no_lint
                        '''
                        stash includes: "${IDA}_annotations/*", name: "${IDA}_annotations", allowEmpty: true
                    }
                }
            }
        }
    }
}
