pipeline {
    agent { label "jenkins-worker" }
    options {
        timestamps()
        timeout(30)
    }
    stages {
        stage("git-checkout") {
            steps {
                dir('edx-platform') {
                    git url: 'https://github.com/edx/edx-platform.git'
                }
            }
        }
        stage("edx-platform") {
            steps {
                withPythonEnv('System-CPython-2.7') {
                    dir('edx-platform') {
                        sh '''
                        source scripts/jenkins-common.sh;
                        pip install -r requirements/edx/paver.txt; pip install -r requirements/edx/testing.txt;
                        paver install_prereqs;
                        code_annotations static_find_annotations --config_file=../edx-toggles/feature_annotations.yaml --no_lint;
                        mv reports/*.yaml reports/lms_annotations.yaml
                        '''
                        stash includes: "reports/lms_annotations.yaml", name: "edx-platform_annotations", allowEmpty: true
                    }
                }
            }
        }

        stage("push-it") {
            steps {
                withPythonEnv('System-CPython-2.7') {
                    dir('edx-toggles') {
                        unstash "edx-platform_annotations"
                        sh '''
                        ls reports
                        '''
                    }
                }
            }
        }
    }
}
